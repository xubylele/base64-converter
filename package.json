{
  "name": "base64-converter",
  "displayName": "Base64 converter",
  "description": "A base64 converter",
  "version": "2.0.1",
  "publisher": "Xubylele",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "files": [
    "out/**/*",
    "src/webview/index.html",
    "src/css/output.css",
    "src/**/*.js"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/xubylele/base64-converter.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.base64ToFile",
        "title": "%base64ToFileCommand.title%"
      },
      {
        "command": "extension.fileToBase64",
        "title": "%fileToBase64Command.title%"
      },
      {
        "command": "extension.openBase64ConverterView",
        "title": "%openBase64ConverterViewCommand.title%"
      },
      {
        "command": "extension.openFileConverterView",
        "title": "%openFileConverterViewCommand.title%"
      },
      {
        "command": "extension.showHistory",
        "title": "%showHistoryCommand.title%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && yarn run build:tailwind && node esbuild.js",
    "build": "yarn run build:tailwind && node esbuild.js --production",
    "watch": "yarn run build:tailwind && node esbuild.js --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "package": "yarn run check-types && yarn run lint && yarn run build:tailwind && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "build:tailwind": "npx tailwindcss -i ./src/css/tailwind.css -o ./src/css/output.css --minify"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.12",
    "@types/mocha": "^10.0.8",
    "@types/node": "22.10.5",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@types/vscode": "1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "i18n": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "uuid": "^11.0.4"
  }
}
