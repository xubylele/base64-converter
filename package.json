{
  "name": "base64-converter",
  "displayName": "Base64 converter",
  "description": "A base64 converter",
  "version": "2.0.1",
  "publisher": "Xubylele",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/xubylele/base64-converter.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.base64ToFile",
        "title": "%base64ToFileCommand.title%"
      },
      {
        "command": "extension.fileToBase64",
        "title": "%fileToBase64Command.title%"
      },
      {
        "command": "extension.openBase64ConverterView",
        "title": "%openBase64ConverterViewCommand.title%"
      },
      {
        "command": "extension.openFileConverterView",
        "title": "%openFileConverterViewCommand.title%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "build": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.12",
    "@types/mocha": "^10.0.8",
    "@types/node": "22.10.5",
    "@types/vscode": "1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "i18n": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "vscode": "^1.1.37"
  }
}