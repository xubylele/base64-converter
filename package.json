{
  "name": "base64-converter",
  "displayName": "Base64 Studio",
  "description": "A base64 studio for converting base64 to file and file to base64.",
  "version": "2.1.0",
  "publisher": "Xubylele",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "files": [
    "out/**/*",
    "src/webview/index.html",
    "src/css/output.css",
    "src/**/*.js"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/xubylele/base64-converter.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.base64ToFile",
        "title": "%base64ToFileCommand.title%"
      },
      {
        "command": "extension.fileToBase64",
        "title": "%fileToBase64Command.title%"
      },
      {
        "command": "extension.openBase64ConverterView",
        "title": "%openBase64ConverterViewCommand.title%"
      },
      {
        "command": "extension.openFileConverterView",
        "title": "%openFileConverterViewCommand.title%"
      },
      {
        "command": "extension.showHistory",
        "title": "%showHistoryCommand.title%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:tailwind && node esbuild.js",
    "build": "pnpm run build:tailwind && node esbuild.js --production",
    "watch": "pnpm run build:tailwind && node esbuild.js --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "package": "pnpm run check-types && pnpm run lint && pnpm run build:tailwind && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "build:tailwind": "pnpm tailwindcss -i ./src/css/tailwind.css -o ./out/css/output.css --minify",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint-community/eslint-utils": "^4.4.1",
    "@eslint-community/regexpp": "^4.12.1",
    "@eslint/config-array": "^0.19.1",
    "@eslint/core": "^0.10.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/object-schema": "^2.1.5",
    "@eslint/plugin-kit": "^0.2.5",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/i18n": "^0.13.12",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.8",
    "@types/node": "22.10.5",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/vscode": "1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "i18n": "^0.15.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "uuid": "^11.0.4"
  }
}