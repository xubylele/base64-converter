{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "jsx": "react",
    "lib": [
      "ES2022",
      "dom"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "vscode"
    ],
    "skipLibCheck": true,
    "outDir": "out"
  },
  "include": [
    "src/**/*"
  ]
}